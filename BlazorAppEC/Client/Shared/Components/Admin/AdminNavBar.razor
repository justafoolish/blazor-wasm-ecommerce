@inject AuthenticationStateProvider authState
@inject NavigationManager _navManage

<header class='flex justify-between items-center py-2 sticky top-0 inset-x-0 bg-white z-10  px-10'>
    <h3 class='text-gray-700 text-xs'>Trang chủ</h3>
    <div class='flex items-center group space-x-2 relative' id='header'>
        <div class='group-hover:opacity-0 transition-all py-2'>
            <h3 class='text-sm text-right text-gray-900'>@Name</h3>
            <h3 class='text-sm text-right text-gray-700'>Admin</h3>
        </div>
        <div class='group-hover:opacity-0 transition-all w-9 overflow-hidden mr-2'>
            <img src='data:image/png;base64,' alt='' class='max-w-full rounded-full object-center object-cover'>
        </div>
        <div class='absolute border-l-2 border-gray-400 pl-2 text-sm inline-block py-1 mb-3 group-hover:translate-y-0 transform translate-y-full transition-all opacity-0 group-hover:opacity-100 self-end'>
            <a @onclick="logout" class='cursor-pointer text-gray-900 block whitespace-nowrap'>Đăng Xuất</a>
        </div>
    </div>
</header>

@code {
    private string Name {get; set;} = "";
    protected async override Task OnInitializedAsync() {
        var userState = await authState.GetAuthenticationStateAsync();
        var User = userState.User;

        Name = User.Identity.Name;
    }
    protected async Task logout()
    {
        await ((BlazorAppEC.Client.CustomAuthenticationStateProvider)authState).MarkUserAsLoggedOut();
        _navManage.NavigateTo("/admin/login");
        StateHasChanged();
    }
}

