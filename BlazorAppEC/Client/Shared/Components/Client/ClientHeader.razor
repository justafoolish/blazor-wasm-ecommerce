@code {
    public bool[] activeBanner = new bool[]{true,false,false};

    public void setActiveBanner(int index) {
        for(int i = 0; i < activeBanner.Count(); i++) {
            activeBanner[i] = false;
        }

        activeBanner[index] = true;
    }

    public string getActiveBanner(int index) {
        return activeBanner[index] ? "active" : null;
    }
 }