@page "/admin/category-manage"
@inject ICategoryManageVM _categoryManageVM
<BlazorAppEC.Client.Shared.Components.Admin.AdminNavBar />
<main class="px-10">
    <div class="flex justify-between py-5 mb-3">
        <h3 class="font-semibold text-2xl">Danh sách danh mục sản phẩm</h3>
        <div class="flex space-x-3">
            <NavLink href="admin/category-manage/add" class="flex items-center bg-gray-700 text-gray-200 text-xs px-3 py-2 hover:text-gray-100 hover:bg-gray-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>Tạo danh mục
            </NavLink>
        </div>
    </div>

    <div class="table-responsive">
        <table id="product_table" class="table table-borderless table-hover" width="100%" cellspacing="0">
            <thead class="bg-gray-700 text-gray-50">
                <tr>
                    <th>Tên danh mục</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in _categoryManageVM.Categories)
                {
                    <tr class="text-center">
                    <td>
                        <a href="" class="text-blue-600 hover:text-blue-700 hover:underline transition-all">
                            @item.Title
                        </a>
                    </td>
                </tr>
                }
                
            </tbody>
        </table>
    </div>
</main>

@code {
    protected async override Task OnInitializedAsync() {
        await _categoryManageVM.initCategory();
    }
}